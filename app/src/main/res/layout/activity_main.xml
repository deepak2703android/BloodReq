<?xml version="1.0" encoding="utf-8"?>


<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgbg"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/namelyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="start"
        >


<TextView
    android:id="@+id/textname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Name -"
    android:textColor="@color/white"
    android:textSize="25dp"

    />

    <EditText
        android:id="@+id/entername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginStart="70dp"
        android:hint="Ex-Jhon"
        android:textColor="@color/white"
        android:textColorHint="@color/cloud"
        android:maxLines="1"
        android:maxLength="30"
        android:singleLine="true"
        android:textSize="25dp"
/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bloodgrplyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
     app:layout_constraintTop_toBottomOf="@id/namelyt"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="start"
        >

        <TextView
            android:id="@+id/Bloodgrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Group -"
            android:textColor="@color/white"
            android:textSize="25dp"

            />
        <Spinner
            android:id="@+id/bloodgrpspinner"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/noofunitslyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/bloodgrplyt"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="start"
        >


        <TextView
            android:id="@+id/noofunits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No of Units -"
            android:textColor="@color/white"
            android:textSize="25dp"

            />
        <Spinner
            android:id="@+id/noofunitsspinner"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Locaton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/noofunitslyt"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="start"
        >

        <TextView
            android:id="@+id/loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location -"
            android:textColor="@color/white"
            android:textSize="25dp"

            />

        <EditText
            android:id="@+id/locedittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="INDIA LAND TECH PART GROUND FLOOR TOWER-B  Coimbatore TN 641035"
            android:textColor="@color/white"
            android:textColorHint="@color/cloud"
            android:maxLines="3"
            android:textSize="15dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/hospial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/Locaton"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="start"
        >


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital -"
            android:textColor="@color/white"
            android:textSize="25dp"

            />

        <EditText
            android:id="@+id/Hospitaledittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="Ex-Appalo"
            android:textColor="@color/white"
            android:textColorHint="@color/cloud"
            android:maxLines="1"
            android:maxLength="30"
            android:singleLine="true"
            android:textSize="25dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Contactlyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/hospial"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="start"
        >


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact -"
            android:textColor="@color/white"
            android:textSize="25dp"

            />

        <EditText
            android:id="@+id/conactedittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="Ex-9753456778"
            android:textColor="@color/white"
            android:textColorHint="@color/cloud"
            android:maxLines="1"
            android:maxLength="10"
            android:singleLine="true"
            android:inputType="number"
            android:textSize="25dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/messaglyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/Contactlyt"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="start"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message -"
            android:textColor="@color/white"
            android:textSize="25dp"

            />

        <EditText
            android:id="@+id/messageedittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="Your Message Here"
            android:textColor="@color/white"
            android:textColorHint="@color/cloud"
            android:maxLines="3"
            android:singleLine="true"
            android:textSize="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Buttonlyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/messaglyt"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="start"
        >
        <Button
            android:id="@+id/SubmitBUtton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Submit"   />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>